doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title Airport Codes
    meta(name='description', content='Making sense of those three-letter airport codes.')
    script(src='app.js')
    link(rel='stylesheet', href='/app.css')
    script(src='//use.typekit.net/sei6hkn.js')
    script try{Typekit.load();}catch(e){}

    meta(property='og:site_name', content='Airport Codes')
    meta(property='og:url', content='http://airportcod.es')
    meta(property='og:description', content='Making sense of those three-letter airport codes.')
    meta(property='og:image', content='http://airportcod.es/images/facebook-airport-codes.png')
    meta(property='og:type', content='website')

  body
    header
      nav.cf
        h1
          a(href="#") Airport Codes
          a.nav-about(href="#about") About
        input(type="text", name="search", autocomplete="off", autocorrect="off", placeholder="Find your airport")
        button.clear(type="reset")

    ul.cf.airport-list
      each airport in airports
        li.card(id="code-"+airport.code)
          .background
          a(href="#airport/"+airport.code)= airport.code

    include ./includes/ga.html